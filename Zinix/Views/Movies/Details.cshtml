@model Zinix.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<p>Genre: @Model.Genre.Name</p>
<p>Release Date: @Model.ReleasedDate.ToShortDateString()</p>
<p>Date Added: @Model.DateAdded.ToShortDateString()</p>
<p>Number in stock: @Model.NumberInStock</p>